---
import Layout from "../layouts/Layout.astro";

const stats = [
  { number: "20+", label: "官方授权合作机构" },
  { number: "10+", label: "深度合作高校" },
  { number: "16", label: "覆盖城市" },
  { number: "4000+", label: "赋能人次" },
];

const painPoints = [
  {
    icon: "refresh",
    title: "技术迭代快，不知从何学起",
    description: "AI、IoT、边缘计算...新概念层出不穷，难以判断哪些值得投入时间学习。",
  },
  {
    icon: "book",
    title: "学了理论，但无法落地",
    description: "看了很多教程和文档，但面对实际项目时，仍然不知道如何下手。",
  },
  {
    icon: "tool",
    title: "缺乏真实项目经验",
    description: "没有合适的硬件环境和真实场景，难以积累可迁移的实战能力。",
  },
];

const partners = [
  { name: "合作伙伴1", logo: null },
  { name: "合作伙伴2", logo: null },
  { name: "合作伙伴3", logo: null },
  { name: "合作伙伴4", logo: null },
  { name: "合作伙伴5", logo: null },
  { name: "合作伙伴6", logo: null },
];

const features = [
  {
    badge: "一个核心理念",
    title: "工具赋能，专注解决真问题",
    description: `我们拒绝纸上谈兵，所有课程设计均源于柴火生态中数百个真实产业项目的凝练，旨在让您学到"解决一类问题的系统能力"。`,
    accent: "red",
  },
  {
    badge: "三大课程方向",
    title: "覆盖从入门到实战的完整能力链",
    description: `围绕"用AI造物"、"造AI的物"与"场景整合"三大核心方向，为不同阶段的学习者提供系统化课程，助你完成从工具掌握到真实场景应用的能力跨越。`,
    accent: "yellow",
  },
  {
    badge: "三层能力进阶",
    title: `从"会用工具"到"能解决问题"`,
    description: `每个课程均按"认知规划→开发实战→场景交付"三步进阶，确保你不只听懂，更能亲手做出来、真正用得上。`,
    accent: "red",
  },
  {
    badge: "五大实战场景",
    title: "不教空洞理论，只授已验证的技能",
    description: `精选智慧空间、视觉安防、离网通信等五大高频高价值场景，完整复现从真实痛点到可运行原型的全过程。学到的不是组件，而是能直接带回岗位的"场景技能包"。`,
    accent: "yellow",
  },
];
---

<Layout title="首页">
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 px-4 sm:px-6 lg:px-8 overflow-hidden bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
        <!-- Left: Text -->
        <div class="w-full lg:w-1/2 space-y-6">
          <p class="text-sm sm:text-base font-medium text-brand-red tracking-wide">
            柴火创客学院
          </p>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            让新技术<br />
            <span class="text-brand-red">为你所用</span>
          </h1>

          <p class="text-xl sm:text-2xl text-gray-700 font-medium">
            掌握AIoT实战技能，解决真实场景问题
          </p>

          <p class="text-base sm:text-lg text-gray-500 max-w-lg">
            从0到1掌握新技术整合能力，把学到的知识直接用到工作中。真实硬件、真实场景、真实问题——学完就能上手。
          </p>

          <a
            href="/courses"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-brand-red rounded-lg hover:bg-brand-red-hover transition-colors cursor-pointer"
          >
            探索课程
          </a>
        </div>

        <!-- Right: Visual -->
        <div class="w-full lg:w-1/2">
          <div class="relative aspect-[4/3] max-w-md mx-auto lg:max-w-none rounded-2xl overflow-hidden bg-gray-100">
            <!-- Image placeholder -->
            <div class="absolute inset-0 flex flex-col items-center justify-center text-gray-400">
              <svg class="w-16 h-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm">Hero 图片占位</span>
              <span class="text-xs mt-1">建议尺寸 800x600</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 px-4 sm:px-6 lg:px-8 border-b border-gray-200">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div>
              <p class="text-3xl sm:text-4xl font-bold text-brand-red">{stat.number}</p>
              <p class="text-sm text-gray-600 mt-1">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Pain Points Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
          你是否面临这些挑战？
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {painPoints.map((point) => (
          <div class="bg-white p-6 rounded-2xl">
            <div class="w-12 h-12 bg-brand-red-light rounded-xl flex items-center justify-center mb-4">
              {point.icon === "refresh" && (
                <svg class="w-6 h-6 text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              )}
              {point.icon === "book" && (
                <svg class="w-6 h-6 text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              )}
              {point.icon === "tool" && (
                <svg class="w-6 h-6 text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{point.title}</h3>
            <p class="text-sm text-gray-600">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Core Concept Section (Centered) -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center space-y-4">
      <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-brand-red-light text-brand-red">
        {features[0].badge}
      </span>
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
        {features[0].title}
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        {features[0].description}
      </p>
    </div>
  </section>

  <!-- Zigzag Features Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto space-y-24">
      {features.slice(1).map((feature, index) => (
        <div class:list={[
          "flex flex-col gap-8 items-center",
          index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"
        ]}>
          <!-- Decorative Block -->
          <div class="w-full lg:w-1/2">
            <div class:list={[
              "aspect-[4/3] rounded-2xl",
              feature.accent === "red" ? "bg-brand-red-light" : "bg-brand-yellow-light"
            ]}>
            </div>
          </div>

          <!-- Content -->
          <div class="w-full lg:w-1/2 space-y-4">
            <span class:list={[
              "inline-block px-3 py-1 text-sm font-medium rounded-full",
              feature.accent === "red"
                ? "bg-brand-red-light text-brand-red"
                : "bg-brand-yellow-light text-brand-yellow-dark"
            ]}>
              {feature.badge}
            </span>
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
              {feature.title}
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
          他们选择了柴火创客学院
        </h2>
        <p class="text-gray-600">
          与众多企业、高校建立深度合作
        </p>
      </div>

      <!-- Partner Logos -->
      <div class="grid grid-cols-3 md:grid-cols-6 gap-6 items-center">
        {partners.map((partner) => (
          <div class="flex items-center justify-center h-16 bg-white rounded-lg">
            {partner.logo ? (
              <img src={partner.logo} alt={partner.name} class="h-8 w-auto" />
            ) : (
              <span class="text-sm text-gray-400">{partner.name}</span>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
        准备好开始学习了吗？
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        探索我们的课程体系，找到适合您的学习路径
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/courses"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-brand-red rounded-lg hover:bg-brand-red-hover transition-colors duration-200 cursor-pointer"
        >
          探索课程
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-gray-900 bg-brand-yellow rounded-lg hover:bg-brand-yellow-hover transition-colors duration-200 cursor-pointer"
        >
          预约咨询
        </a>
      </div>
    </div>
  </section>
</Layout>
