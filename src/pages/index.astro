<style>
  :root {
    --header-bg: #f3d230; /* Match standard yellow */
  }

  /* Reset & Base */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .main-content {
    background: #fff;
    padding-top: 24px;
    padding-bottom: 24px;
  }

  /* Header Banner */
