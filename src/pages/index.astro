---
import Layout from "../layouts/Layout.astro";

const stats = [
  { number: "20+", label: "官方授权合作机构" },
  { number: "10+", label: "深度合作高校" },
  { number: "16", label: "覆盖城市" },
  { number: "4000+", label: "赋能人次" },
];

const features = [
  {
    badge: "一个核心理念",
    title: "工具赋能，专注解决真问题",
    description: `我们拒绝纸上谈兵，所有课程设计均源于柴火生态中数百个真实产业项目的凝练，旨在让您学到"解决一类问题的系统能力"。`,
    image: "/images/feature-1.svg",
    accent: "red",
  },
  {
    badge: "三大课程方向",
    title: "覆盖从工具使用到方案交付的完整能力链",
    description: `我们围绕"用AI造物"、"造AI的物"与"解决方案"三大核心方向，为处于不同阶段的学习者提供系统课程，助力大家完成从硬件基础掌握到真实场景方案交付的能力跨越。`,
    image: "/images/feature-2.svg",
    accent: "yellow",
  },
  {
    badge: "三层能力进阶赋能",
    title: `实现从"使用者"到"构建者"的跃迁`,
    description: "我们每个课程均按认知规划→开发实战→设计交付三步进阶，确保你不只听懂，更能亲手做出来、真正用得上。",
    image: "/images/feature-3.svg",
    accent: "red",
  },
  {
    badge: "五大实战场景方案复现",
    title: "不教空洞理论，只授已验证的解法",
    description: `我们精选智慧空间、视觉安防、离网通信等五大高频高价值场景，完整复现从真实痛点到可运行解决方案的全过程。在这里，您学到的不是组件，而是能直接带回岗位的"场景工具箱"。`,
    image: "/images/feature-4.svg",
    accent: "yellow",
  },
];
---

<Layout title="首页">
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 px-4 sm:px-6 lg:px-8 overflow-hidden bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
        <!-- Left: Text -->
        <div class="w-full lg:w-1/2 space-y-6">
          <p class="text-sm sm:text-base font-medium text-brand-red tracking-wide">
            柴火创客学院
          </p>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            为真实世界<br />
            <span class="text-brand-red">锻造解决方案</span>
          </h1>

          <p class="text-xl sm:text-2xl text-gray-700 font-medium">
            助您将AIoT技术转化为可部署的行业方案
          </p>

          <p class="text-base sm:text-lg text-gray-500 max-w-lg">
            破解产业升级核心难题：以更低成本、更高效率，将"智改数转"蓝图转化为可验证、可落地的真实生产力
          </p>
        </div>

        <!-- Right: Visual -->
        <div class="w-full lg:w-1/2">
          <div class="relative aspect-[4/3] max-w-md mx-auto lg:max-w-none rounded-2xl overflow-hidden bg-gray-100">
            <!-- Image placeholder -->
            <div class="absolute inset-0 flex flex-col items-center justify-center text-gray-400">
              <svg class="w-16 h-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm">Hero 图片占位</span>
              <span class="text-xs mt-1">建议尺寸 800x600</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 px-4 sm:px-6 lg:px-8 border-b border-gray-200">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div>
              <p class="text-3xl sm:text-4xl font-bold text-brand-red">{stat.number}</p>
              <p class="text-sm text-gray-600 mt-1">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Core Concept Section (Centered) -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center space-y-4">
      <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-brand-red-light text-brand-red">
        {features[0].badge}
      </span>
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
        {features[0].title}
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        {features[0].description}
      </p>
    </div>
  </section>

  <!-- Zigzag Features Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto space-y-24">
      {features.slice(1).map((feature, index) => (
        <div class:list={[
          "flex flex-col gap-8 items-center",
          index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"
        ]}>
          <!-- Decorative Block -->
          <div class="w-full lg:w-1/2">
            <div class:list={[
              "aspect-[4/3] rounded-2xl",
              feature.accent === "red" ? "bg-brand-red-light" : "bg-brand-yellow-light"
            ]}>
            </div>
          </div>

          <!-- Content -->
          <div class="w-full lg:w-1/2 space-y-4">
            <span class:list={[
              "inline-block px-3 py-1 text-sm font-medium rounded-full",
              feature.accent === "red"
                ? "bg-brand-red-light text-brand-red"
                : "bg-brand-yellow-light text-brand-yellow-dark"
            ]}>
              {feature.badge}
            </span>
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
              {feature.title}
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
        准备好开始学习了吗？
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        探索我们的课程体系，找到适合您的学习路径
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/courses"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-brand-red rounded-lg hover:bg-brand-red-hover transition-colors duration-200 cursor-pointer"
        >
          探索课程
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-gray-900 bg-brand-yellow rounded-lg hover:bg-brand-yellow-hover transition-colors duration-200 cursor-pointer"
        >
          预约咨询
        </a>
      </div>
    </div>
  </section>
</Layout>
