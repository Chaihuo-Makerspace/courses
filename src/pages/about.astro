---
import Layout from "../layouts/Layout.astro";

const stats = [
  { number: "20+", label: "全国签约官方授权合作机构" },
  { number: "10+", label: "深度合作高校" },
  { number: "16", label: "服务网络覆盖城市" },
  { number: "4000+", label: "累计赋能创新创业者人次" },
];

const team = [
  {
    name: "待添加",
    role: "导师",
    bio: "导师简介待添加",
    image: null,
  },
];
---

<Layout title="关于学院">
  <!-- Hero Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-4xl mx-auto text-center">
      <span
        class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-brand-red-light text-brand-red mb-6"
      >
        关于我们
      </span>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        我们是谁
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 leading-relaxed">
        柴火创客学院是柴火创客空间旗下的专业技术赋能机构。自2011年起，我们持续为高校师生、企业技术人员及创客爱好者提供前沿信息技术实战培训，是连接前沿创新技术与产业真实应用的桥梁。
      </p>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8" id="achievements">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-12">
        我们的成就
      </h2>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {
          stats.map((stat) => (
            <div class="text-center">
              <p class="text-4xl sm:text-5xl font-bold text-brand-red mb-2">
                {stat.number}
              </p>
              <p class="text-sm sm:text-base text-gray-600">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50" id="team">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-12">
        导师与团队
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          team.map((member) => (
            <div class="bg-white rounded-lg p-6 text-center">
              <div class="w-24 h-24 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
                {member.image ? (
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-full h-full rounded-full object-cover"
                  />
                ) : (
                  <svg
                    class="w-12 h-12 text-gray-400"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                    <circle cx="12" cy="7" r="4" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                {member.name}
              </h3>
              <p class="text-sm text-brand-red mb-2">{member.role}</p>
              <p class="text-sm text-gray-600">{member.bio}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8" id="partners">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-12">
        合作伙伴
      </h2>
      <p class="text-center text-gray-500">合作伙伴信息待添加</p>
    </div>
  </section>
</Layout>
