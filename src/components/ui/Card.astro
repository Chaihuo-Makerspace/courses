---
interface Props {
    href?: string;
    accent?: "red" | "yellow";
    class?: string;
}

const { href, accent = "yellow", class: className } = Astro.props;

const Element = href ? "a" : "div";

const baseStyles =
    "relative block overflow-hidden rounded-2xl transition-all duration-300";
const hoverStyles = href
    ? "hover:-translate-y-1 hover:shadow-lg hover:shadow-gray-200"
    : "";

const accentStyles = {
    red: "bg-brand-red-light border border-transparent",
    yellow: "bg-brand-yellow-light border border-transparent",
    white: "bg-white border border-gray-100",
};

// If generic usage requires more variants, add them to accentStyles
// For now we map "red" and "yellow" to brand light backgrounds as used in the design
---

<Element
    href={href}
    class:list={[
        baseStyles,
        hoverStyles,
        accentStyles[accent] || accentStyles.yellow,
        className,
    ]}
>
    <slot />
</Element>
